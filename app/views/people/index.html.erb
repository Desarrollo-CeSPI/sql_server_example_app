<h1><%=t "activerecord.models.person_listing"%></h1>

<table class="table table-condensed">
  <tr>
    <th><%=t "activerecord.attributes.person.first_name" %></th>
    <th><%=t "activerecord.attributes.person.last_name" %></th>
    <th><%=t "activerecord.attributes.person.birthdate" %></th>
    <th><%=t "activerecord.attributes.person.saldo" %></th>
    <th><%=t "activerecord.attributes.person.email" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.first_name %></td>
    <td><%= person.last_name %></td>
    <td><%= person.localized_birthdate %></td>
    <td><%= person.localized_saldo %></td>
    <td><%= person.email %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('activerecord.actions.people.new_person'), new_person_path, class: "btn bt-small" %>
