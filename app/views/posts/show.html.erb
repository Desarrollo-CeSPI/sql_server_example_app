<p id="notice"><%= notice %></p>

<p>
  <b><%=t "activerecord.attributes.post.title"%>:</b>
  <%= @post.title %>
</p>

<p>
  <b><%=t "activerecord.attributes.post.content"%>:</b>
  <%= @post.content %>
</p>

<p>
  <b><%=t "activerecord.attributes.post.publishing_date"%>:</b>
  <%= @post.localized_publishing_date %>
</p>

<p>
  <b><%=t "activerecord.attributes.post.person"%>:</b>
  <%= @post.person.fullname %>
</p>

<p>
  <b><%=t "activerecord.attributes.post.image"%></b>
  <%= image_tag url_for(:controller => "posts", :action => "show_image", :id => @post.id) %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
